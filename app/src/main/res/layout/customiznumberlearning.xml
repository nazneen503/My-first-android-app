<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_210"
        android:background="@drawable/number_bg"
        android:layout_marginTop="@dimen/dim_50">
        <ImageView
            android:id="@+id/imgv"
            android:layout_width="@dimen/dim_200"
            android:layout_height="@dimen/dim_180"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_110"
            android:src="@drawable/ic_pooh_num"/>
    </LinearLayout>
    <TextView
        android:id="@+id/image_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANDA"
        android:layout_gravity="center"
        android:textSize="@dimen/dim_60"
        android:textColor="@android:color/white"
        android:fontFamily="@font/hang1"/>
    <LinearLayout
        android:layout_width="@dimen/dim_100"
        android:layout_height="@dimen/dim_160"
        android:background="@drawable/number_one_box"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dim_40">
        <TextView
            android:id="@+id/count_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dim_50" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/one_btn"
        android:layout_width="@dimen/dim_170"
        android:layout_height="@dimen/dim_70"
        android:background="@drawable/number_button_one"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dim_20">
        <TextView
            android:id="@+id/count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONE"
            android:gravity="center"
            android:textSize="@dimen/dim_20"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>